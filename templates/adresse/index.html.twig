{% extends 'base.html.twig' %}

{% block title %}Adresse index{% endblock %}

{% block body %}
   <center>  <h1>Adresse index</h1></center>

    
    <table class="table">
         <thead class="thead-dark">
        
            <tr>
                <th>Id</th>
                <th>Rue</th>
                <th>Code_postal</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.id }}</td>
                <td>{{ adresse.rue }}</td>
                <td>{{ adresse.codePostal }}</td>
                <td>{{ adresse.ville }}</td>
                <td>{{ adresse.pays }}</td>
                <td>
                    <a href="{{ path('app_adresse_show', {'id': adresse.id}) }}"class="btn btn-primary"style="color: white; text-decoration: none;">show</a>
                    <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}"class="btn btn-warning" style="color: white; text-decoration: none;">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adresse_new') }}"class="btn btn-success" style="color: white; text-decoration: none;">Create new</a>
{% endblock %}
