{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
{% block stylesheets %}
<style>
.table-container {
  margin-left:250px;
}
</style>
{% endblock %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
<nav class="navbar"></nav>
<script src="{{ asset('js/affichage.js') }}"></script>
   <center> <h1  style="color:black;font-size:38px;  font-weight: bold;">Categorie index</h1></center>
       <div class="table-container">

 <table class="table">
         <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td style="color:black;font-size:18px;font-weight: bold;">{{ categorie.id }}</td>
                <td style="color:black;font-size:18px;font-weight: bold;">{{ categorie.nom }}</td>
                <td style="color:black;font-size:18px;font-weight: bold;">{{ categorie.description }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}"class="btn btn-primary"style="color: white; text-decoration: none;">show</a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"class="btn btn-warning" style="color: white; text-decoration: none;"> edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}" class="btn btn-success" style="color: white; text-decoration: none;">Create new</a>
{% endblock %}
