{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
  <center>  <h1>Produit index</h1></center>

     <table class="table">
         <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Qte</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.qte }}</td>
                <td>{{ produit.img }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}"class="btn btn-primary"style="color: white; text-decoration: none;">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"class="btn btn-warning" style="color: white; text-decoration: none;">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}"class="btn btn-success" style="color: white; text-decoration: none;">Create new</a>
{% endblock %}
